create database Academy;

use Academy;

create table Groups (
	Id int primary key identity(1,1),
	Name nvarchar(10) NOT NULL UNIQUE,
	Rating int NOT NULL CHECK(Rating >= 0 AND Rating <= 5),
	Year int NOT NULL CHECK(Year >= 1 AND Year <=5)
);

